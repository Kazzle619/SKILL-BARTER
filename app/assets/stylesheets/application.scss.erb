@import "bootstrap";

@import 'font-awesome-sprockets';
@import 'font-awesome';

a {
  color: black;
}

a:hover {
  text-decoration: none;
}

.navbar-toggler {
  background-color: rgb(246, 247, 247);
}

.navbar-toggler-icon {
  background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 30 30'
  xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='rgba(192, 192, 192, 0.8)'
  stroke-width='3' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E");
}

.top-eye-catching-wrapper {
  position: relative;
  width: 100%;
}

.top-eye-catching-wrapper:before {
  content: "";
  display: block;
  padding-top: 50%;
  max-height: 300px;
}

.top-eye-catching {
  position: absolute;
  top:0;
  left:0;
  width: 100%;
  height: 100%;
  background-image: image-url("<%= asset_path('top_page_image.jpeg') %>");
  background-size: cover;
}

:root{
    --font-family-sans-serif: "Helvetica Neue", Helvetica, Arial, "游ゴシック体", "Yu Gothic", YuGothic, "Hiragino Kaku Gothic ProN", Meiryo, sans-serif;
    --font-family-monospace: SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
}

body {
    font-family: "Helvetica Neue", Helvetica, Arial, "游ゴシック体", "Yu Gothic", YuGothic, "Hiragino Kaku Gothic ProN", Meiryo, 'Open Sans', sans-serif;
}

h1, h2, h3, h4, h5, h6 {
    font-family: "Helvetica Neue", Helvetica, Arial, "游ゴシック体", "Yu Gothic", YuGothic, "Hiragino Kaku Gothic ProN", Meiryo, 'Open Sans', sans-serif;
}

.square-box {
  position: relative;
}

.square-box:before {
  content: '';
  display: block;
  width: 100%;
  padding-top: 100%;
}

.square-box img {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  object-fit: cover;
}

.skill_holder_card {
  margin: 10px;
  padding: 10px;
  background-color: rgba(102, 204, 255, 0.5);
}

.tag_card {
  margin-top: 5px;
  padding: 5px;
  background-color: rgba(102, 51, 255, 0.3);
}

.proposition-card {
  margin: 10px;
  padding: 10px;
  background-color: rgba(102, 204, 255, 0.5);
}

.propositions-search-form {
  background-color: rgba(256, 153, 204, 0.5);
}

.sentence {
  word-break: break-all;
}

.review-card {
  margin: 10px;
  padding: 10px;
  background-color: rgba(153, 102, 255, 0.5);
}

.chat-messages-card {
  margin: 10px;
  padding: 10px;
  background-color: rgba(255, 204, 102, 0.5);
}

.users-search-form {
  background-color: rgba(256, 153, 204, 0.5);
}
