<div class="review-card col-md-12 rounded-lg">
  <div class="row">
    <div class="col-md-12">
      <h2>レビュー</h2>
    </div>
  </div>

  <%= form_with(model: [proposition, review]) do |f| %>
    <%# レビューレート %>
    <div id="star" class="form-group ml-5">
      <%= f.hidden_field :rate, id: "review_star" %>
    </div>

    <script>
      $('#star').raty({
        size     :  36,
        starOff  :  '<%= asset_path('star-off.png') %>',
        starOn   :  '<%= asset_path('star-on.png') %>',
        starHalf :  '<%= asset_path('star-half.png') %>',
        scoreName:  'review[rate]',
        half     :  true,
      });
    </script>

    <%# レビューコメント %>
    <div class="form-group row">
      <div class="col-md-10 offset-md-1">
        <%= f.text_area :comment, rows: 8, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="actions mx-auto" style="width: 200px;">
      <%= f.submit "レビュー送信", class: "btn btn-info btn-block" %><br />
    </div>
  <% end %>

</div>
