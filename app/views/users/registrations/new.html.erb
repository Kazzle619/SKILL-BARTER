<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>新規会員登録</h2>
    </div>
  </div>

  <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group row">
      <%# nameカラム %>
      <%= f.label :name, "氏名", class: "col-md-2 col-form-label" %><br >
      <div class="col-md-4">
        <%= f.text_field :name, autofocus: true, placeholder: "姓と名の間に要スペース", class: "form-control" %>
      </div>
      <%# kana_nameカラム %>
      <%= f.label :kana_name, "フリガナ", class: "col-md-2 col-form-label" %><br >
      <div class="col-md-4">
        <%= f.text_field :kana_name, placeholder: "姓と名の間に要スペース", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%# emailカラム %>
      <%= f.label :email, "Eメール", class: "col-md-2 col-form-label" %><br >
      <div class="col-md-10">
        <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%# phone_numberカラム %>
      <%= f.label :phone_number, "携帯電話番号", class: "col-md-2 col-form-label" %><br >
      <div class="col-md-10">
        <%= f.text_field :phone_number, placeholder: "ハイフン無し", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%# password %>
      <%= f.label :password, "パスワード", class: "col-md-2 col-form-label" %>
      <div class="col-md-10">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "#{@minimum_password_length}文字以上", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%# password_confirmation %>
      <%= f.label :password_confirmation, "パスワード確認用", class: "col-md-2 col-form-label" %><br />
      <div class="col-md-10">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "#{@minimum_password_length}文字以上", class: "form-control" %>
      </div>
    </div>

    <div class="actions mx-auto" style="width: 200px;">
      <%= f.submit "新規会員登録", class: "btn btn-info btn-block" %><br />
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
