<div class="container">
  <div class="row">
    <h1>スキルホルダー一覧(新着順)</h1>
  </div>

  <%# 新着スキルホルダー一覧 %>
  <div class="row">
    <div class="col-md-9">
      <div class="row">
        <% @users.each do |user| %>
          <div class="col-md-6">
            <%= render 'users/skill_holder_card', user: user %>
          </div>
        <% end %>
      </div>
    </div>

    <%# スキルホルダー検索フォーム %>
    <div class="col-md-3  users-search-form rounded-lg">
      <%= render 'users/users_search_form' %>
    </div>
  </div><br >

  <%# ページネーション %>
  <div class="row">
    <div class="col-md-4 offset-md-4">
      <%= paginate @users %>
    </div>
  </div>
</div>
